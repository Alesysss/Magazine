<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Magazine.Cart" Background="{StaticResource CenteredGradient}">
    
        <StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Fill" 
              BackgroundColor="#B6174B" HeightRequest="70" >
            <Label Text="Корзина" FontFamily="Montserrat" FontSize="25" TextColor="White"
            FontAttributes="Bold" VerticalOptions="Center" Margin="10, 0, 0, 0"/>
           
        </StackLayout>
        <ScrollView>
            <StackLayout x:Name="cartStackLayout"></StackLayout>
        </ScrollView>
    </StackLayout>
   
</ContentPage>