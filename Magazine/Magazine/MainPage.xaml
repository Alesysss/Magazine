<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Magazine.MainPage"
             Background="{StaticResource CenteredGradient}">

    <StackLayout Padding="0, 60, 0, 80">
        <Label Text="MONrO" FontFamily="Montserrat" FontSize="50" TextColor="#B6174B"
               HorizontalTextAlignment="Center" FontAttributes="Bold" />

        <Image Source="nach.png" HorizontalOptions="Center" Margin="0, 10, 0, 35" />

        <Button Text="Начать" FontFamily="Montserrat" FontSize="30" TextColor="White"
                    WidthRequest="340" HeightRequest="58" Margin="0, 0, 0, 0" CornerRadius="30"
                    HorizontalOptions="Center" BackgroundColor="#B6174B" Clicked="Button_Start"/>


    </StackLayout>

</ContentPage>
